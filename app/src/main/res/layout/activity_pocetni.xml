<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PocetniActivity">

    <TextView
        android:id="@+id/odabirJezika"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Odaberi jezik"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/spinner"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/recycleView"/>

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/odabirJezika"
        app:layout_constraintRight_toLeftOf="@+id/button"
        app:layout_constraintBottom_toTopOf="@+id/recycleView"
        app:layout_constraintTop_toTopOf="parent"
         />

    <Button
        android:id="@+id/dodajStudenta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Novi Student"
        app:layout_constraintLeft_toRightOf="@+id/spinner"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/recycleView"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycleView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="60dp"/>




</androidx.constraintlayout.widget.ConstraintLayout>